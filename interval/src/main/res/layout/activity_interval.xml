<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_dark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/layout_margin"
            app:layout_box="all">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_margin_half"
                android:textAlignment="center"
                android:textColor="@color/page_background"
                android:textSize="@dimen/title3_size"
                android:text="@string/title_warm_up"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_margin_half"
                android:textAlignment="center"
                android:textColor="@color/page_background"
                android:textSize="@dimen/title_size"
                android:text="@string/description_warm_up"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/time_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/layout_margin_half"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/interval_time_size"
                        android:text="30"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/layout_margin_half"
                        android:textAlignment="center"
                        android:textColor="@color/page_background"
                        android:textSize="@dimen/title_size"
                        android:text="@string/seconds"/>

                </LinearLayout>

                <ImageButton
                    android:id="@+id/pause"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@color/primary"/>

            </LinearLayout>

        </LinearLayout>

</android.support.wearable.view.BoxInsetLayout>