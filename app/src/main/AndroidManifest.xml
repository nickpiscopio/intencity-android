<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.intencity.intencity"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/intencity_icon"
        android:label="@string/app_name">

        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.DemoActivity"
            android:theme="@android:style/Theme.DeviceDefault.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activity.CreateAccountActivity"
            android:theme="@style/AppTheme.Base"
            android:label="@string/title_create_account"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ForgotPasswordActivity"
            android:theme="@style/AppTheme.Base"
            android:label="@string/title_forgot_password"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.TermsActivity"
            android:theme="@style/AppTheme.Base"
            android:label="@string/title_terms"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.StatActivity"
            android:theme="@style/AppTheme.Base"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.Direction"
            android:theme="@style/AppTheme.Base"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.SearchActivity"
            android:theme="@style/AppTheme.Base"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.AboutActivity"
            android:theme="@style/AppTheme.Base"
            android:label="@string/title_about"
            android:screenOrientation="portrait" />

    </application>

</manifest>
