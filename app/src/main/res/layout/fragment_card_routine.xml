<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card"
    android:layout_margin="@dimen/layout_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/layout_margin"
            android:paddingRight="@dimen/layout_margin"
            android:paddingLeft="@dimen/layout_margin"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tab_icon_fitness_guru"
                android:paddingTop="@dimen/layout_margin_half"
                android:paddingLeft="@dimen/layout_margin_half"
                android:paddingRight="@dimen/layout_margin_half"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_routine"
                    android:layout_marginTop="@dimen/layout_margin_half"
                    android:paddingLeft="@dimen/layout_margin"
                    android:paddingRight="@dimen/layout_margin"
                    android:textSize="@dimen/card_title_size"
                    android:textColor="@color/secondary_light"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/spinner_routine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/layout_margin_half"/>

            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/divider"/>

        <RelativeLayout
            android:id="@+id/button_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/card_button_margin"
            android:gravity="end">

            <Button
                android:id="@+id/button_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start"
                android:textColor="@color/secondary_light"
                android:textStyle="bold"
                android:padding="@dimen/card_button_padding"
                android:background="@drawable/button_card"
                style="?android:attr/borderlessButtonStyle"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>