<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_exercise"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_margin"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/note_hint"
            android:textColor="@color/secondary_dark"
            android:layout_marginBottom="@dimen/layout_margin"
            android:padding="@dimen/layout_margin"
            android:background="@drawable/edit_text_flat"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/layout_margin_half">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.25"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/title_weight"
                android:gravity="center"
                android:textSize="@dimen/card_title3_size"
                android:textColor="@color/secondary_dark"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/title_reps"
                android:gravity="center"
                android:textSize="@dimen/card_title3_size"
                android:textColor="@color/secondary_dark"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/title_intensity"
                android:gravity="center"
                android:textSize="@dimen/card_title3_size"
                android:textColor="@color/secondary_dark"/>

        </LinearLayout>

        <include layout="@layout/divider" />

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"/>

    </LinearLayout>

</RelativeLayout>