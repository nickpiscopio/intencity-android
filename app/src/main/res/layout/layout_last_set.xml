<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/last_set"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_light"
        android:text="45"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/weight_suffix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_light"
        android:text="@string/title_lbs"
        android:layout_marginLeft="@dimen/layout_margin_quarter"
        android:textSize="@dimen/card_title2_size"/>

    <TextView
        android:id="@+id/slash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_light"
        android:text="/"
        android:layout_marginRight="@dimen/layout_margin_quarter"
        android:layout_marginLeft="@dimen/layout_margin_quarter"
        android:textSize="@dimen/card_title_size"/>

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_light"
        android:text="10"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/suffix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_light"
        android:text="@string/title_reps"
        android:layout_marginLeft="@dimen/layout_margin_quarter"
        android:textSize="@dimen/card_title2_size"/>

</LinearLayout>