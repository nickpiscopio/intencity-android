<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_exercise"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card"
    android:layout_marginBottom="@dimen/layout_margin_half">

    <LinearLayout
        android:id="@+id/layout_exercise_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/exercise"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CURRENT EXERCISE"
            android:layout_marginTop="@dimen/layout_margin_half"
            android:padding="@dimen/layout_margin"
            android:textSize="@dimen/card_title_size"
            android:textColor="@color/primary"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/button_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_half"
            android:padding="@dimen/layout_margin"
            android:src="@android:drawable/arrow_down_float"
            android:background="@null" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>