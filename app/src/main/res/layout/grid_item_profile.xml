<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/list_item_header" />

    <LinearLayout
        android:id="@+id/award_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view_award"
            android:layout_width="@dimen/ranking_badge_size"
            android:layout_height="@dimen/ranking_badge_size"
            android:layout_marginTop="@dimen/layout_margin"
            android:src="@mipmap/badge"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_quarter"
            android:layout_marginBottom="@dimen/layout_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:textColor="@color/secondary_light"
                android:paddingRight="@dimen/related_item_margin"/>

            <TextView
                android:id="@+id/total_badges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/card_title_size"
                android:textColor="@color/secondary_light"
                android:text="70"/>

        </LinearLayout>

        <include layout="@layout/divider" />

    </LinearLayout>

    <include layout="@layout/list_item_standard" />

</LinearLayout>